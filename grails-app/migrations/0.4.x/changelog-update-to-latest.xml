		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="receipt_item" columnName="shipment_item_id"/>
			</not>
		</preConditions>
		<addColumn tableName="receipt_item">
			<column name="shipment_item_id" type="char(38)"/>
